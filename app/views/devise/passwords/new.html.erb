<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field field form-group">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder: "Email" %>
  </div>

  <div class="actions field form-group">
  	</br>
    <%= f.submit "Send me reset password instructions", class:"btn btn-info" %>
		</br>
  </div>
<% end %>
</br>

<%= render "devise/shared/links" %>
